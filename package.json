{
  "name": "egiedit",
  "version": "1.0.0",
  "description": "EGIEdit - Advanced Text Editor with syntax highlighting",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --win --mac"
  },
  "keywords": [
    "text-editor",
    "electron",
    "codemirror"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.egiedit.app",
    "productName": "EGIEdit",
    "copyright": "Copyright Â© 2025 EGIEdit",
    "icon": "build/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "node_modules/codemirror/lib/**/*",
      "node_modules/codemirror/mode/javascript/**/*",
      "node_modules/codemirror/mode/xml/**/*",
      "node_modules/codemirror/mode/htmlmixed/**/*",
      "node_modules/codemirror/mode/css/**/*",
      "node_modules/codemirror/mode/clike/**/*",
      "node_modules/codemirror/mode/python/**/*",
      "node_modules/codemirror/mode/sql/**/*",
      "node_modules/codemirror/mode/markdown/**/*",
      "node_modules/codemirror/mode/yaml/**/*",
      "node_modules/codemirror/mode/meta.js",
      "node_modules/codemirror/theme/material-darker.css",
      "node_modules/codemirror/theme/monokai.css",
      "node_modules/codemirror/theme/dracula.css",
      "node_modules/codemirror/theme/solarized.css",
      "node_modules/codemirror/addon/edit/closebrackets.js",
      "node_modules/codemirror/addon/edit/matchbrackets.js",
      "node_modules/codemirror/addon/edit/closetag.js",
      "node_modules/codemirror/addon/search/searchcursor.js",
      "node_modules/codemirror/package.json",
      "node_modules/iconv-lite/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "dmg": {
      "title": "EGIEdit",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "fileAssociations": [
      { "ext": ["txt"], "name": "Text File", "role": "Editor" },
      { "ext": ["html", "htm"], "name": "HTML File", "role": "Editor" },
      { "ext": ["xml", "xaml"], "name": "XML File", "role": "Editor" },
      { "ext": ["json"], "name": "JSON File", "role": "Editor" },
      { "ext": ["js", "jsx", "mjs"], "name": "JavaScript File", "role": "Editor" },
      { "ext": ["ts", "tsx"], "name": "TypeScript File", "role": "Editor" },
      { "ext": ["cs"], "name": "C# File", "role": "Editor" },
      { "ext": ["css", "scss", "less"], "name": "CSS File", "role": "Editor" },
      { "ext": ["java"], "name": "Java File", "role": "Editor" },
      { "ext": ["sql"], "name": "SQL File", "role": "Editor" },
      { "ext": ["c", "cpp", "h", "hpp"], "name": "C/C++ File", "role": "Editor" },
      { "ext": ["py"], "name": "Python File", "role": "Editor" },
      { "ext": ["md"], "name": "Markdown File", "role": "Editor" },
      { "ext": ["yaml", "yml"], "name": "YAML File", "role": "Editor" }
    ]
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "codemirror": "^5.65.20",
    "iconv-lite": "^0.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ncarmello57/TextEditor.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ncarmello57/TextEditor/issues"
  },
  "homepage": "https://github.com/ncarmello57/TextEditor#readme"
}
